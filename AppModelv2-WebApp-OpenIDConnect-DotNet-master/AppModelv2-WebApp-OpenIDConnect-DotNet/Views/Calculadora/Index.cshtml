
@{
    ViewBag.Title = "Index";
}

<h1>Calculadora</h1>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Ingenieria de Software</title>
</head>
<body>
    @if (!Request.IsAuthenticated)
    {
        <!-- If the user is not authenticated, display the sign-in button -->
        <a href="@Url.Action("SignIn", "Home")" style="text-decoration: none;">
            <svg xmlns="http://www.w3.org/2000/svg" xml:space="preserve" width="300px" height="50px" viewBox="0 0 3278 522" class="SignInButton">
            <style type="text/css">

                .fil0:hover {
                    fill: #4B4B4B;
                }    

                .fnt0 {
                    font-size: 260px;
                    font-family: 'Segoe UI Semibold', 'Segoe UI';
                    text-decoration: none;
                }
</style>
            <rect class="fil0" x="2" y="2" width="3174" height="517" fill="black"  />

            <rect x="150" y="129" width="122" height="122" fill="#F35325" />

            <rect x="284" y="129" width="122" height="122" fill="#81BC06" />

            <rect x="150" y="263" width="122" height="122" fill="#05A6F0" />

            <rect x="284" y="263" width="122" height="122" fill="#FFBA08" />

            <text x="470" y="357" fill="white" class="fnt0">Sign in with Microsoft</text>
        </svg>
        </a>
    }
    else
    {
        <div class="row">
            <div>
                @model AppModelv2_WebApp_OpenIDConnect_DotNet.Models.CalculadoraModel
                @using (Html.BeginForm())
                {
                    <h3 style="color:black">
                        @Html.Label("Primer Operando")
                    </h3>
                    @Html.EditorFor(x => x.A, new { htmlAttributes = new { @class = "form-control" } })
                    <br /> <br />

                    <h3 style="color:black">
                        @Html.Label("Segundo Operando")
                    </h3>
                    @Html.EditorFor(x => x.B, new { htmlAttributes = new { @class = "form-control" } })
                    <br /> <br />

                    <input type="submit" class="btn btn-default" value="Suma" name="command" />
                    <input type="submit" class="btn btn-default" value="Resta" name="command" />
                    <input type="submit" class="btn btn-default" value="Multiplicacion" name="command" />
                    <input type="submit" class="btn btn-default" value="Division" name="command" />
                    <br /> <br />

                    <h2 style="color:blue">
                        @Html.Label("El resultado es: ")
                        @Html.DisplayFor(x => x.Result)
                    </h2>
                }

            </div>

        </div>
        <br /> <br />

        @Html.ActionLink("Sign out", "SignOut", "Home", null, new { @class = "btn btn-primary" })

    }
    @if (!string.IsNullOrWhiteSpace(Request.QueryString["errormessage"]))
    {
        <div style="background-color:red;color:white;font-weight: bold;">Error: @Request.QueryString["errormessage"]</div>
    }
</body>
</html>